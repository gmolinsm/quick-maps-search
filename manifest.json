{
  "manifest_version": 3,
  "name": "Quick Maps Search",
  "version": "1.0",
  "description": "Right-click any element to search its text on Google Maps.",
  "permissions": ["contextMenus", "activeTab", "scripting"],
  "browser_specific_settings": {
    "gecko": {
        "id": "@quick-maps-search",
        "data_collection_permissions": {
          "required":["none"]
        }
      }
  },
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "48": "icons/map-48.png"
  }
}
